{
    "name": "leonardo/php-laravel",
    "description": "Projeto do curso Do PHP ao Laravel",
    "type": "project",
    "require": {
        "vlucas/phpdotenv": "^5.6",
        "phpmailer/phpmailer": "^6.9",
        "respect/validation": "^2.3",
        "stripe/stripe-php": "^10.3",
        "league/plates": "^3.6",
        "spatie/ignition": "^1.15",
        "php-di/php-di": "^7.1",
        "egulias/email-validator": "^4.0"
    },
    "require-dev": {
        "laravel/pint": "^1.24",
        "symfony/var-dumper": "^7.1",
        "fakerphp/faker": "^1.24"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        },
        "files": [
            "core/helpers/constants.php",
            "core/helpers/functions.php"
        ]
    },
    "scripts": {
        "post-autoload-dump": [
            "composer clear-cache"
        ]
    }

}
